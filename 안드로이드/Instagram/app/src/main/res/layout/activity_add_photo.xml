<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddPhotoActivity">


    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:background="@drawable/back" />

            <TextView
                android:id="@+id/textView"
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="새 게시물"
                android:textColor="#000000"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:text="공유"
                android:textColor="#188AD8"
                android:textSize="20dp"/>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/toolbar_division"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/toolbar"
        android:background="@color/colorDivision"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/post_image2"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/toolbar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            tools:srcCompat="@tools:sample/avatars" />

        <EditText
            android:id="@+id/editTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar_division"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@id/imageView"
            android:background="@android:color/transparent"
            android:ems="10"
            android:inputType="none"
            android:scrollHorizontally="false"
            android:hint="문구 입력..." />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/toolbar_division2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/imageView"
        android:background="@color/colorDivision"
        android:orientation="horizontal"/>

    <Button
        android:id="@+id/tag_button"
        android:layout_below="@id/toolbar_division2"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="left|center_vertical"
        android:text="  사람 태그하기"
        android:textColor="#000000"
        android:textSize="20dp"/>

    <LinearLayout
        android:id="@+id/toolbar_division3"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tag_button"
        android:background="@color/colorDivision"
        android:orientation="horizontal"/>

    <Button
        android:id="@+id/location_button"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tag_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:gravity="left|center_vertical"
        android:text="  위치 추가"
        android:textColor="#000000"
        android:textSize="20dp"/>

    <LinearLayout
        android:id="@+id/toolbar_division4"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/location_button"
        android:background="@color/colorDivision"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"
        android:text="  다른 미디어에도 게시" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="  Facebook"
        android:textColorLink="#FFFFFF"
        android:textSize="20dp"
        android:trackTint="@drawable/switch_track_selector" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:buttonTint="#3DAEFA"
        android:text="  Twitter"
        android:textSize="20dp"
        android:trackTint="@drawable/switch_track_selector" />


    <Switch
        android:id="@+id/switch4"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:trackTint="@drawable/switch_track_selector"
        android:textSize="20dp"
        android:text="  Tumblr" />


    <LinearLayout
        android:id="@+id/toolbar_division5"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView6"
        android:background="@color/colorDivision"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="고급 설정"
        android:textColor="#7E7E7E"
        android:textSize="14dp" />




</LinearLayout>